!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Acros'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Acros'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navegacion'

    %main{:role => "main"}
      .row.collapse.full-width
        .large-12.columns
          .panel
            = content_for :panel
      .row
        .large-12.columns
          %br
          = render 'layouts/mensajes'
          %br
      .row
        .large-12.columns
          = yield


