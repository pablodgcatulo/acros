= form_for(@participante, auto_labels: false) do |f|
  %fieldset
    %legend Datos Personales
    .row
      .large-12.columns
        .row
          .large-6.columns
            .row.collapse
              .small-2.columns
                %span.prefix Apellido
              .small-10.columns
                = f.text_field :apellido, {placeholder: "Apellido del participante"}
          .large-6.columns
            .row.collapse
              .small-2.columns
                %span.prefix Nombre
              .small-10.columns
                = f.text_field :nombre, {placeholder: "Nombre del participante"}
        .row
          .large-6.columns
            .row.collapse
              .small-2.columns
                %span.prefix e-mail
              .small-10.columns
                = f.text_field :email, {placeholder: 'Dirección de correo electónico'}
          .large-6.columns
            .row.collapse
              .small-2.columns
                %span.prefix Celular
              .small-10.columns
                = f.text_field :celular, {placeholder: "Número de celular"}
        .row
          .large-12.columns
            .row.collapse
              .small-1.columns
                %span.prefix Empresa
              .small-11.columns
                = f.select :empresa_id, @empresas, {include_blank: true}, {class: 'select2', placeholder: "Seleccione la empresa para la que trabaja"}
  .row
    .large-12.columns
      .clearfix
        .actions
          = link_to "Cancelar", :back, class: "small radius alert button right"
          = f.submit 'Guardar', class: "small radius success button right"